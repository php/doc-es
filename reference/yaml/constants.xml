 <variablelist xml:id="yaml.constants.encoding">
  <title>Encoding types for <function>yaml_emit</function></title>
  <varlistentry>
   <term>
    <constant>YAML_ANY_ENCODING</constant>
    (<type>integer</type>)
   </term>
   <listitem>
    <simpara>
     Deje que el emisor seleccione una codificación.
    </simpara>
   </listitem>
  </varlistentry>
  <varlistentry>
   <term>
    <constant>YAML_UTF8_ENCODING</constant>
    (<type>integer</type>)
   </term>
   <listitem>
    <simpara>
     Codifica a UTF8.
    </simpara>
   </listitem>
  </varlistentry>
  <varlistentry>
   <term>
    <constant>YAML_UTF16LE_ENCODING</constant>
    (<type>integer</type>)
   </term>
   <listitem>
    <simpara>
     Codifica a UTF16LE.
    </simpara>
   </listitem>
  </varlistentry>
  <varlistentry>
   <term>
    <constant>YAML_UTF16BE_ENCODING</constant>
    (<type>integer</type>)
   </term>
   <listitem>
    <simpara>
     Codifica a UTF16BE.
    </simpara>
   </listitem>
  </varlistentry>
 </variablelist>

 <variablelist xml:id="yaml.constants.break">
  <title>Linebreak types for <function>yaml_emit</function></title>
  <varlistentry>
   <term>
    <constant>YAML_ANY_BREAK</constant>
    (<type>integer</type>)
   </term>
   <listitem>
    <simpara>
     Seleccionaremos un carácter para el salto de línea.
    </simpara>
   </listitem>
  </varlistentry>
  <varlistentry>
   <term>
    <constant>YAML_CR_BREAK</constant>
    (<type>integer</type>)
   </term>
   <listitem>
    <simpara>
     Uso <literal>\r</literal> como carácter de salto (al estilo de Mac).
    </simpara>
   </listitem>
  </varlistentry>
  <varlistentry>
   <term>
    <constant>YAML_LN_BREAK</constant>
    (<type>integer</type>)
   </term>
   <listitem>
    <simpara>
     Uso <literal>\n</literal> como carácter de salto de línea (al estilo Unix).
    </simpara>
   </listitem>
  </varlistentry>
  <varlistentry>
   <term>
    <constant>YAML_CRLN_BREAK</constant>
    (<type>integer</type>)
   </term>
   <listitem>
    <simpara>
     Uso <literal>\r\n</literal> como cáracter de salto (al estilo DOS).
    </simpara>
   </listitem>
  </varlistentry>
 </variablelist>

