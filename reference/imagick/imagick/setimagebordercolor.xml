<refentry xmlns="http://docbook.org/ns/docbook" xml:id="imagick.setimagebordercolor">
 <refnamediv>
  <refname>Imagick::setImageBorderColor</refname>
  <refpurpose>Establece el color de borde de la imagen</refpurpose>
 </refnamediv>

 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis>
   <modifier>public</modifier> <type>bool</type><methodname>Imagick::setImageBorderColor</methodname>
   <methodparam><type>mixed</type><parameter>border</parameter></methodparam>
  </methodsynopsis>
  <para>
   Establece el color de borde de la imagen.
  </para>
 </refsect1>

 <refsect1 role="parameters">
  &reftitle.parameters;
  <para>
   <variablelist>
    <varlistentry>
     <term><parameter>border</parameter></term>
     <listitem>
      <para>
       El color de borde
      </para>
     </listitem>
    </varlistentry>
   </variablelist>
  </para>
 </refsect1>

