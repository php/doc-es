<refentry xml:id="solrquery.addfilterquery" xmlns="http://docbook.org/ns/docbook" xmlns:xlink="http://www.w3.org/1999/xlink">
 <refnamediv>
  <refname>SolrQuery::addFilterQuery</refname>
  <refpurpose>Especifica una consulta de filtro</refpurpose>
 </refnamediv>
 
 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis>
   <modifier>public</modifier> <type>SolrQuery</type><methodname>SolrQuery::addFilterQuery</methodname>
   <methodparam><type>string</type><parameter>fq</parameter></methodparam>
  </methodsynopsis>
  <para>
   Especifica una consulta de filtro
  </para>
  
 </refsect1>
 
 <refsect1 role="parameters">
  &reftitle.parameters;
  <para>
   <variablelist>
    <varlistentry>
     <term><parameter>fq</parameter></term>
     <listitem>
      <para>
       La consulta de filtro
      </para>
     </listitem>
    </varlistentry>
   </variablelist>
  </para>
 </refsect1>
 
 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <para>
   Devuelve el objeto SolrQuery actual.
  </para>
 </refsect1>
 
 <refsect1 role="examples">
  &reftitle.examples;
  <para>
   <example>
    <title>Ejemplo de <methodname>SolrQuery::addFilterQuery</methodname></title>
    <programlisting role="php">
<![CDATA[
<?php

$opciones = array
(
    'hostname' => SOLR_SERVER_HOSTNAME,
    'login'    => SOLR_SERVER_USERNAME,
    'password' => SOLR_SERVER_PASSWORD,
    'port'     => SOLR_SERVER_PORT,
);

$cliente = new SolrClient($opciones);

$consulta = new SolrQuery();

$consulta->setQuery($consulta);

$consulta->addFilterQuery('color:blue,green');

$respuesta_consulta = $cliente->query($consulta);

$respuesta = $respuesta_consulta->getResponse();

print_r($respuesta['facet_counts']['facet_fields']);

?>
]]>
    </programlisting>
    &example.outputs.similar;
    <screen>
<![CDATA[
 &fq=color:blue,green
]]>
    </screen>
   </example>
  </para>
 </refsect1>
 
 
</refentry>

