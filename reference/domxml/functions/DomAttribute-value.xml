<refentry xml:id='function.domattribute-value' xmlns="http://docbook.org/ns/docbook">
 <refnamediv>
  <refname>DomAttribute->value</refname>
  <refpurpose>
   Devuelve el valor del atributo
  </refpurpose>
 </refnamediv>
 <refsect1 role="description">
  &reftitle.description;
  <classsynopsis>
   <ooclass><classname>DomAttribute</classname></ooclass>
   <methodsynopsis>
    <type>string</type><methodname>value</methodname>
    <void/>
   </methodsynopsis>
  </classsynopsis>
  <para>
   Esta funci√≥n devuelve el valor del atributo.
  </para>
 </refsect1>
 <refsect1 role="examples">
  &reftitle.examples;
  <para>
   <example>
    <title>Obtener todos los atributos de un nodo</title>
    <programlisting role="php">
<![CDATA[
<?php

include("ejemplo.inc");

if (!$dom = domxml_open_mem($cadena_xml)) {
     echo "Ocurri&oacute; un error al interpretar el documento\n";
     exit;
}

$raiz = $dom->document_element();
$atrs = $raiz->attributes();

echo 'Atributos de ' . $raiz->node_name() . "\n";
foreach ($atrs as $atributo) {
     echo ' - ' . $atributo->name . ' : ' . $attribute->value . "\n";
}

?>
]]>
    </programlisting>
    &example.outputs;
    <screen>
<![CDATA[
Atributos de chapter
 - language : en
]]>
    </screen>
   </example>
  </para>
 </refsect1>
 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <para>
   Devuelve el valor del atributo.
  </para>
 </refsect1>
 <refsect1 role="migration">
  <title>Migraci&oacute;n a PHP 5</title>
  <para>
   Use la propiedad <property>value</property> de
   <classname>DOMAttr</classname>.
  </para>
 </refsect1>
