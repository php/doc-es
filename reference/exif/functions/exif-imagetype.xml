  <refsect1 role="examples">
   &reftitle.examples;
   <example>
    <title>Ejemplo con <function>exif_imagetype</function></title>
    <programlisting role="php">
<![CDATA[
<?php
if (exif_imagetype('image.gif') != IMAGETYPE_GIF) {
    echo 'Esta imagen no es un gif';
}
?>
]]>
    </programlisting>
   </example>
  </refsect1>
