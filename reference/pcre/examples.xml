<appendix xml:id="pcre.examples">
 &reftitle.examples;
 <para>
  <example>
   <title>Ejemplos de patrones válidos</title>
   <itemizedlist>
    <listitem><simpara><literal>/&lt;\/\w+&gt;/</literal></simpara></listitem>
    <listitem><simpara><literal>|(\d{3})-\d+|Sm</literal></simpara></listitem>
    <listitem><simpara><literal>/^(?i)php[34]/</literal></simpara></listitem>
    <listitem><simpara><literal>{^\s+(\s+)?$}</literal></simpara></listitem>
   </itemizedlist>
  </example>
 </para>
 <para>
  <example>
   <title>Ejemplos de patrones no válidos</title>
   <itemizedlist>
    <listitem>
     <simpara>
      <literal>/href='(.*)'</literal> - falta el delimitador final
     </simpara>
    </listitem>
    <listitem>
     <simpara>
      <literal>/\w+\s*\w+/J</literal> - modificador 'J' desconocido
     </simpara>
    </listitem>
    <listitem>
     <simpara>
      <literal>1-\d3-\d3-\d4|</literal> - falta el delimitador inicial
     </simpara>
    </listitem>
   </itemizedlist>
  </example>
 </para>
</appendix>

