   </informaltable>
  </para>
 </refsect1>

 <refsect1 role="examples">
  &reftitle.examples;
  <para>
   <example>
    <title>Un ejemplo de <function>sha1</function></title>
    <programlisting role="php">
<![CDATA[
<?php
$cadena = 'manzana';

if (sha1($cadena) === '6cc76bddf29e934258e30fbf301ad8ec89cb7cc6') {
    echo "¿Quisiera una manzana verde o roja?";
    exit;
}
?>
]]>
    </programlisting>
   </example>
  </para>
 </refsect1>

