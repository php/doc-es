 &ini.descriptions.title;
 
 <para>
  <variablelist>
   <varlistentry xml:id="ini.msql.allow-persistent">
    <term>
     <parameter>msql.allow_persistent</parameter>
     <type>boolean</type>
    </term>
    <listitem>
     <para>
      Si se permiten conexiones persistentes mSQL.
     </para>
    </listitem>
   </varlistentry>
     
   <varlistentry xml:id="ini.msql.max-persistent">
    <term>
     <parameter>msql.max_persistent</parameter>
     <type>integer</type>
    </term>
    <listitem>
     <para>
      El máximo número de conexiones persistentes mSQL por proceso.
     </para>
    </listitem>
   </varlistentry>
     
   <varlistentry xml:id="ini.msql.max-links">
    <term>
     <parameter>msql.max_links</parameter>
     <type>integer</type>
    </term>
    <listitem>
     <para>
      El máximo número de conexiones persistentes mSQL por proceso, incluyendo
      las conexiones persistentes.
     </para>
    </listitem>
   </varlistentry>
     
  </variablelist>
 </para>
