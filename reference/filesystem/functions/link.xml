 <refsect1 role="examples">
  &reftitle.examples;
  <para>
   <example>
    <title>Crear un simple enlace duro</title>
    <programlisting role="php">
<![CDATA[
<?php

$desde_ruta = 'origen.ext';  // Este es el archivo que ya existe
$hacia_ruta = 'nuevo_archvo.ext'; // Este es el nombre de archivo que quiere enlazar

link($desde_ruta, $hacia_ruta);
?>
]]>
    </programlisting>
   </example>
  </para>
 </refsect1>

